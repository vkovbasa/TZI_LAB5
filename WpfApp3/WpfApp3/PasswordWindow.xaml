<Window x:Class="WpfApp3.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перевірка пароля" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введіть пароль для доступу:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Підтвердити" Width="200" Click="OnConfirmButtonClick"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed" Text="Невірний пароль."/>
        </StackPanel>
    </Grid>
</Window>
